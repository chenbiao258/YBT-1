<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sinosoft.service.business.db.dao.ComboDataDao">
	<resultMap id="BaseResultMap"
		type="com.sinosoft.service.business.db.vo.ComboDataVo">
		<result column="type" jdbcType="VARCHAR" property="type" />
		<result column="code" jdbcType="VARCHAR" property="code" />
		<result column="value" jdbcType="VARCHAR" property="value" />
	</resultMap>
	<sql id="Base_Column_List">
		type, code, value
	</sql>
	<select id="queryListByType" parameterType="java.lang.String"
		resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		FROM t_pam_config_value a, t_pam_config b
		WHERE a.cnf_id=b.uid AND b.type=#{type,jdbcType=VARCHAR}
		ORDER BY a.order_no
	</select>
</mapper>